<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('../images/<%= background_img %>'); height: 50vh; background-position: center;">
</div>

<div class="content container list-inline text-center">
  <div class="row">

    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <div class="header-flat-details">
        <div class="header-flat-owner  text-center">
          <%=image_tag avatar, class: "img-circle", height: "80px" %>
          <p><%= name %></p>
        </div>
        <div class="header-flat-name">
          <h1><%= description %></h1>
          <p><%= city %></p>
          <i class="fa fa-star" style="color: #ffb400"></i>
          <i class="fa fa-star" style="color: #ffb400"></i>
          <i class="fa fa-star" style="color: #ffb400"></i>
          <i class="fa fa-star" style="color: #ffb400"></i>
          <i class="fa fa-star" style="color: #cacccd"></i>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      <form action="#">
        <h4>Book this flat</h4>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-6">
              <input class="form-control" placeholder="checkin" id="checkin" type="text">
            </div>
            <div class="col-xs-6">
              <input class="form-control" placeholder="checkout" type="text">
            </div>
          </div>
        </div>
        <div class="form-group">
          <select name="" id="guests" class="form-control">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
        </div>
        <input class="btn btn-danger" value="Book it" style="width: 100%" type="submit">
      </form>
    </div>
  </div>

</div>
